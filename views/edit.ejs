<%- include('partials/header'); -%>

<main>
  <form action="/blogpost/update/<%= post._id %>" method="post">
    <fieldset>
      <h2>Title</h2>
      <input class="form-text title" type="text" name="postText" value="<%= post.title %>" placeholder="">
    </fieldset>
    <fieldset>
      <h2>Content</h2>
      <textarea class="form-text" name="postBody" id="" cols="30" rows="5"><%= post.content %></textarea>
         <div class="form-text compose-div"  >
         <input type="file" name="image" id="image">
       <input  type="text" name="imageLink" id="imageLink" placeholder=" Or Paste image link">
       </div>
    </fieldset>
    <button class="compose-button" name="submit" type="submit">Update</button>
  </form>
</main>

<%- include('partials/footer'); -%>
